@using BanDongHo.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<div class="container" style="margin-top:160px">
    <h1 style="font-weight:600; font-size:28px;">Đăng Nhập</h1>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group" style="max-width:450px;">
                        @* @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
                        Email
                        <div>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group" style="max-width:450px;">
                        Mật Khẩu
                        @*  @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                        <div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group" style=" max-width:450px;">
                        <div class="col-md-offset-2 col-md-10" style="display: flex; justify-content:space-between;">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                Nhớ Mật Khẩu
                            </div>
                            <p style="color:black;">
                                @Html.ActionLink("Quên mật khẩu?", "ForgotPassword")
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 ">
                            <input type="submit" value="Đăng Nhập" class="btn btn-primary" />
                        </div>
                    </div>

                    @* Enable this once you have account confirmation enabled for password reset functionality*@

                }
            </section>
        </div>
        <div class="col-md-4">
            <h1 style="font-size: 27px;">Khách hàng đăng ký mới</h1>
            <br />
            <q style="color:black;">Bằng cách tạo tài khoản với TTHSHOP, bạn sẽ có thể không phải di chuyển qua cửa hàng mà vẫn có thể mua sắm thỏa thích, quá trình thanh toán nhanh hơn,tiện lợi hơn.</q>
            <br />
            <p style="color:red;">

                @Html.ActionLink("Đăng ký ngay", "Register")
            </p>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}