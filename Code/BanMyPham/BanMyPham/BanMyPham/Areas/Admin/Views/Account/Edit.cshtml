@model BanDongHo.Models.ApplicationUser
@{
    ViewBag.Title = "Cập Nhật Tài Khoản";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/account" class="nav-link">Danh Sách Tài Khoản</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/account">Danh Sách</a></li>
                    <li class="breadcrumb-item active">Cập Nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông Tin Tài Khoản</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.Id)//Để gọi được Id cần chọn trong table
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        @*<div class="col-md-6">
                                <div class="form-group">
                                    <label>Tên Tài Khoản</label>
                                    <p class="form-control">@Model.UserName</p>
                                </div>
                            </div>*@
                        <div class="form-group">
                            <label for="exampleInput">Tên Tài Khoản</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Tên Tài Khoản" })
                            @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInput">Họ Và Tên</label>
                            @Html.TextBoxFor(x => x.Fullname, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Fullname, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInput">Số Điện Thoại</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInput">Email</label>
                            @Html.TextAreaFor(x => x.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                        </div>
                      @*  <div class="form-group">
                            <label for="exampleInput">Quyền</label>
                            @Html.DropDownListFor(x => x.RoleNames, ViewBag.Role as IEnumerable<SelectListItem>, "-Chọn Quyền Hạn-", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RoleNames, null, new { @class = "text-danger" })
                        </div>*@
                        <div class="form-group">
                            <a href="/admin/account" class="btn btn-danger">Quay Lại</a>
                            <button type="submit" class="btn btn-primary">Cập Nhật</button>
                        </div>
                    </div>

                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
