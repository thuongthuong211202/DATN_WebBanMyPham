@model IEnumerable<BanDongHo.Models.EF.OrderDetail>
   @*danh sách sản phẩm trong phần chi tiết sản phẩm*@
@if (Model != null && Model.Any())
{
    var i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên Sản Phẩm</th>
                <th>Giá</th>
                <th>Số Lượng</th>
                <th>Thành Tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@i</td>
                <td>@item.Product.Title</td>
                <td>@BanDongHo.Common.Common.FormatNumber((item.Price), 0) VND</td>
                <td>@item.Quantity</td>
                <td>@BanDongHo.Common.Common.FormatNumber((item.Price * item.Quantity), 0) VND</td>
            </tr>
                i++;
            }
        </tbody>
    </table>
}
